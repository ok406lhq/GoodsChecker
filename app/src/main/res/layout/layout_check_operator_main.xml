<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="@dimen/layout_margin5dp"
    android:elevation="3dp"
    android:gravity="center"
    tools:showIn="@layout/main_contain">

    <ImageView
        style="@style/main_left_image_view"
        android:background="@drawable/image_operator_check"/>

    <LinearLayout
        style="@style/main_text_layout_bg_else_style">

        <TextView
            style="@style/main_text_static_tv_style"
            android:text="检查人"/>

        <ImageView
            style="@style/main_text_static_iv_style"/>

        <TextView
            android:id="@+id/tv_operator_check_main"
            style="@style/main_text_change_tv_style"
            android:layout_marginTop="@dimen/layout_margin0dp"
            />

    </LinearLayout>

</LinearLayout>