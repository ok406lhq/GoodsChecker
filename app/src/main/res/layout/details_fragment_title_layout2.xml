<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    tools:showIn="@layout/fragment_details">


    <Button
        android:id="@+id/btn_self_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/self_button_select" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_self_photo"
        android:layout_marginLeft="31dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="多张连拍"
        android:textSize="10dp"
        android:id="@+id/textView"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一"
            android:textColor="#2DA4F3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_fragment_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收费信息"
            android:textColor="?attr/custom_text_color_second"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一"
            android:textColor="#2DA4F3"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>