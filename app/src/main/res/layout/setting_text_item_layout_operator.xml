<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="55dp"
    android:background="?attr/custom_setting_item_change_bg"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/layout_margin10dp"
    tools:showIn="@layout/activity_setting">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/layout_margin20dp"
        android:layout_height="match_parent"
        android:text="@string/setting_operator"
        android:layout_gravity="left"
        android:textColor="?attr/custom_text_color_second"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/text18"
        />


    <TextView
        android:maxLines="1"
        android:textSize="@dimen/text18"
        android:id="@+id/text_setting_add_selection"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_height="match_parent"
        android:textColor="#f64545"
        android:text="@string/add"/>


</LinearLayout>