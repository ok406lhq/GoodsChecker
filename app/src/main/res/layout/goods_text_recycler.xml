<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="80dp"
             android:layout_gravity="center_horizontal"
              android:layout_height="50dp">

    <TextView
        android:id="@+id/text_goods"
        android:layout_marginTop="@dimen/layout_margin10dp"
        android:layout_marginRight="@dimen/layout_margin10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/license_color_day_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/delete_goods"
        android:background="@color/transparent"
        android:src="@drawable/ic_delete_photo"
        android:layout_gravity="right|top"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
</FrameLayout>